<!-- views/customer/confirmation.ejs -->

<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { %>
    <%- res.redirect('/') %>
  <% } %>
  
  <%- messages() %>
  
  <!-- Error Handling -->
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  
  <p >Thank you for your review! Your feedback is important to us.</p>
  