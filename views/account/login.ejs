<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <%- res.redirect('/') %>
<% } %>

<%- messages() %> <!-- Flash messages -->


<!-- Login Form -->
<form action="/account/login" method="POST" class="login-form">
  <div class="form-group">
    <label for="account_email">Email (Username):</label>
    <input type="email" id="account_email" name="account_email" required placeholder="Enter your email">
  </div>

  <div class="form-group">
    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" required placeholder="Enter your password">
  </div>

  <div class="form-group">
    <button type="submit" class="btn">Login</button>
  </div>
</form>

<!-- Sign Up Link -->
<p id="sign-up">Don't have an account? <a href="/account/register">Sign up here</a></p>
