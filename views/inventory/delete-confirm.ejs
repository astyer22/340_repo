<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { 
    res.redirect('/'); 
  } %>
  
  <!-- Display Flash Messages -->
  <%- messages() %> 
  
  <!-- Display Server-Side Errors -->
  <% if (errors) { %>
    <ul class="error-list">
      <% errors.array().forEach((error) => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  
  <!-- Confirmation Message -->
  <p>Confirm Deletion - This action is permanent and cannot be undone. Please verify the details below.</p>
  
  <!-- Vehicle Delete Form -->
  <form id="deleteForm" action="/inv/delete-confirm/" method="POST">
  
    <!-- Classification Dropdown -->
  
  
    <!-- Vehicle Make -->
    <div>
      <label for="invMake">Make:</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        value="<%= inv_make %>" 
        required 
        readonly
      >
    </div>
  
    <!-- Vehicle Model -->
    <div>
      <label for="invModel">Model:</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        value="<%= inv_model %>" 
        required 
        readonly
      >
    </div>
  
    <!-- Vehicle Year -->
    <div>
      <label for="invYear">Year:</label>
      <input 
        type="number" 
        id="inv_year" 
        name="inv_year" 
        value="<%= inv_year %>" 
        required 
        min="1900" 
        max="<%= new Date().getFullYear() %>" 
        readonly
      >
    </div>
  
    <!-- Vehicle Price -->
    <div>
      <label for="invPrice">Price:</label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        value="<%= inv_price %>" 
        required 
        step="0.01" 
        min="0" 
        readonly
      >
    </div>
  
    <!-- Submit Button -->
    <div>
      <input type="submit" value="Delete">
      
      <!-- Hidden Vehicle ID Input -->
      <input type="hidden" name="inv_id" 
        <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %> 
      >
    </div>
  
  </form>
  
  <div id="errorMessages" class="error-messages" style="display:none;"></div>
  